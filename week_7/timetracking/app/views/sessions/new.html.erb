<h2>Login<h2>

<%= form_tag "/login" do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="action">
    <%= submit_tag "Login" %>
  </div>
<% end %>
